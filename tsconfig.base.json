{
  "lib": "es2019",

  /* default compiler options */
  "compilerOptions": {
    "strict": true,
    "declaration": true,
    "noResolve": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "noEmit": false,
    "inlineSources": true,
    "target": "es2019",

    /*
     * basic aliases
     *
     * This is an assumption inherited by "tsconfig.json", which is placed in the top directory of each package.
     */
    "paths": {
      "@awesome-backup/core": ["../core/src"],
      "@awesome-backup/core/*": ["../core/src/*"],
      "@awesome-backup/mongodb": ["../mongodb/src"],
      "@awesome-backup/mongodb/*": ["../mongodb/src/*"],
      "@awesome-backup/postgresql": ["../postgresql/src"],
      "@awesome-backup/postgresql/*": ["../postgresql/src/*"]
    }
  }
}
